@model IEnumerable<NguyenThanhLong_SE18C.NET_A01.Models.NewsArticle>

@{
    ViewData["Title"] = "News Articles";
}

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #fff;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-size: 1.25rem;
        min-height: 48px;
    }

    .card-subtitle {
        font-size: 0.95rem;
    }

    .card-text {
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.45em 0.6em;
        border-radius: 0.5rem;
    }

    .btn-outline-primary {
        transition: all 0.2s ease;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5 text-primary">News Articles</h1>
        <p class="text-muted fs-5">Browse all active news articles</p>
        <hr class="w-25 mx-auto border-primary border-2">
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var article in Model)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-card rounded-4">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-dark">@article.Headline</h5>

                            @if (!string.IsNullOrEmpty(article.NewsTitle))
                            {
                                <h6 class="card-subtitle text-muted mb-2">@article.NewsTitle</h6>
                            }

                            <p class="card-text text-secondary mt-2 flex-grow-1">
                                @if (!string.IsNullOrEmpty(article.NewsContent))
                                {
                                    @(article.NewsContent.Length > 150 ? article.NewsContent.Substring(0, 150) + "..." : article.NewsContent)
                                }
                            </p>

                            <div class="mt-3">
                                @if (article.Category != null)
                                {
                                    <span class="badge bg-primary me-1">@article.Category.CategoryName</span>
                                }
                                @foreach (var tag in article.NewsTags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Tag.TagName</span>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                @if (article.CreatedDate.HasValue)
                                {
                                    @article.CreatedDate.Value.ToString("MMM dd, yyyy")
                                }
                            </small>
                            <a asp-action="Details" asp-route-id="@article.NewsArticleID" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-4 mt-5 rounded-4 shadow-sm">
            <h5 class="fw-bold mb-2">No News Available</h5>
            <p class="mb-0">There are no active news articles at the moment.</p>
        </div>
    }
</div>

