@model NguyenThanhLong_SE18C.NET_A01.Models.Category

@{
    bool isEdit = Model.CategoryID != 0;
    var title = isEdit ? "Edit Category" : "Create Category";
}

<div class="modal-header">
    <h5 class="modal-title">@title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="categoryForm" method="post" asp-action="@(isEdit ? "Edit" : "Create")">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        @if (isEdit)
        {
            <input type="hidden" asp-for="CategoryID" />
        }

        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryDesciption" class="form-label"></label>
            <textarea asp-for="CategoryDesciption" class="form-control" rows="3"></textarea>
            <span asp-validation-for="CategoryDesciption" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ParentCategoryID" class="form-label"></label>
            <input asp-for="ParentCategoryID" class="form-control" type="number" />
            <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
