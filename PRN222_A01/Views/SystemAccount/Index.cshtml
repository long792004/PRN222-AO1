@model IEnumerable<NguyenThanhLong_SE18C.NET_A01.Models.SystemAccount>

@{
    ViewData["Title"] = "Account Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-people-fill me-2"></i>Account Management</h2>

        <div class="d-flex gap-2">
            <form method="get" class="d-flex">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control form-control-sm me-2" placeholder="🔍 Search by name or email..." />
                <button type="submit" class="btn btn-outline-primary btn-sm"><i class="bi bi-search"></i> Search</button>
            </form>
            <button type="button" class="btn btn-primary btn-sm shadow-sm" onclick="openCreateModal()">
                <i class="bi bi-plus-circle me-1"></i> New Account
            </button>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th style="width: 10%">#ID</th>
                        <th style="width: 25%">Name</th>
                        <th style="width: 25%">Email</th>
                        <th style="width: 20%">Role</th>
                        <th style="width: 20%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var account in Model)
                        {
                            <tr>
                                <td class="text-center fw-semibold">@account.AccountID</td>
                                <td>@account.AccountName</td>
                                <td>@account.AccountEmail</td>
                                <td class="text-center">
                                    @switch (account.AccountRole)
                                    {
                                        case 1:
                                            <span class="badge bg-success px-3 py-2"><i class="bi bi-person-workspace me-1"></i>Staff</span>
                                            break;
                                        case 2:
                                            <span class="badge bg-info text-dark px-3 py-2"><i class="bi bi-mortarboard me-1"></i>Lecturer</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary px-3 py-2">Unknown</span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-outline-warning me-1" onclick="openEditModal(@account.AccountID)">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete(@account.AccountID)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle"></i> No accounts found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="accountModal" tabindex="-1" aria-labelledby="accountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3 shadow-lg" id="modalContent">
            <!-- Content loaded via AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openCreateModal() {
            $.get('@Url.Action("Create", "SystemAccount")', function (data) {
                $('#modalContent').html(data);
                $('#accountModal').modal('show');
            });
        }

        function openEditModal(id) {
            $.get('@Url.Action("Edit", "SystemAccount")?id=' + id, function (data) {
                $('#modalContent').html(data);
                $('#accountModal').modal('show');
            });
        }

        function confirmDelete(id) {
            if (confirm('🗑️ Are you sure you want to delete this account?')) {
                $.post('@Url.Action("Delete", "SystemAccount")', { id: id }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                });
            }
        }

        $(document).on('submit', '#accountForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        $('#modalContent').html(response);
                    }
                }
            });
        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        }

        table thead th {
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 0.03em;
        }

        table tbody tr:hover {
            background-color: #f1f5ff;
        }

        .badge {
            font-size: 0.85rem;
            border-radius: 10px;
        }

        .btn-outline-warning:hover {
            color: #fff !important;
            background-color: #ffc107;
        }

        .btn-outline-danger:hover {
            color: #fff !important;
            background-color: #dc3545;
        }
    </style>
}
