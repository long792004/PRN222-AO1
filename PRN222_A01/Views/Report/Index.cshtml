@model IEnumerable<NguyenThanhLong_SE18C.NET_A01.Models.NewsArticle>

@{
    ViewData["Title"] = "News Article Report";
}

<style>
    .table th {
        white-space: nowrap;
    }
    .card {
        border-radius: 12px;
    }
    .alert {
        border-radius: 10px;
    }
    .form-label {
        color: #495057;
    }
    h2 {
        letter-spacing: 0.5px;
    }
</style>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">📊 News Article Statistics Report</h2>
        <p class="text-muted">Generate and review article statistics by date range</p>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row align-items-end g-3">
                    <div class="col-md-4">
                        <label for="startDate" class="form-label fw-semibold">Start Date</label>
                        <input type="date" id="startDate" name="startDate" class="form-control"
                               value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label for="endDate" class="form-label fw-semibold">End Date</label>
                        <input type="date" id="endDate" name="endDate" class="form-control"
                               value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-bar-chart-line"></i> Generate Report
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.StartDate != null && ViewBag.EndDate != null)
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light border-0 d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1 fw-semibold text-dark">Report Results</h5>
                    <small class="text-muted">
                        Period: @((DateTime)ViewBag.StartDate).ToString("MMM dd, yyyy") → @((DateTime)ViewBag.EndDate).ToString("MMM dd, yyyy")
                    </small>
                </div>
                <span class="badge bg-primary px-3 py-2">Total: @Model.Count()</span>
            </div>

            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table align-middle table-striped table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>ID</th>
                                    <th>Headline</th>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Created By</th>
                                    <th>Created Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var article in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@article.NewsArticleID</td>
                                        <td>@article.Headline</td>
                                        <td>@article.NewsTitle</td>
                                        <td>@(article.Category?.CategoryName ?? "N/A")</td>
                                        <td>@(article.CreatedBy?.AccountName ?? "N/A")</td>
                                        <td>@(article.CreatedDate?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                        <td>
                                            @if (article.NewsStatus == true)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <i class="bi bi-exclamation-triangle"></i>
                        No articles found for the selected date range.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-info-circle"></i>
            Please select a start date and end date to generate a report.
        </div>
    }
</div>
